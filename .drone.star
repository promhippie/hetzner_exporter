description = 'Hetzner Exporter'

def main(ctx):
  return [
    testing(ctx),

    docker(ctx, 'amd64'),
    docker(ctx, 'i386'),
    docker(ctx, 'arm64v8'),
    docker(ctx, 'arm32v6'),

    binary(ctx, 'linux'),
    binary(ctx, 'darwin'),
    binary(ctx, 'windows'),

    manifest(ctx),
    docs(ctx),
    changelog(ctx),
    readme(ctx),
    badges(ctx),
    notify(ctx),
  ]

